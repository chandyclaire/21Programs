<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.temperature"
             Title="">
    
    <VerticalStackLayout Padding="30" Spacing="20"
                             VerticalOptions="CenterAndExpand">

        <Label Text="🌡️ Temperature Converter"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#CD5656"
                   HorizontalOptions="Center" />

        <Frame CornerRadius="10"
                   Padding="10"
                   BorderColor="#CD5656"
                   BackgroundColor="#fff0f0">
            <Entry x:Name="InputEntry"
                       Placeholder="Enter Temperature"
                       Keyboard="Numeric"
                       TextColor="Black"
                       FontSize="18" />
        </Frame>

        <Frame CornerRadius="10"
                   Padding="10"
                   BorderColor="#CD5656"
                   BackgroundColor="#fff0f0">
            <Picker x:Name="ConversionPicker"
                        Title="Select Conversion"
                        TitleColor="#888"
                        TextColor="Black"
                        BackgroundColor="Transparent"
                        FontSize="18">
                <Picker.Items>
                    <x:String>Celcius to Fahrenheit</x:String>
                    <x:String>Fahrenheit to Celcius</x:String>
                </Picker.Items>
            </Picker>
        </Frame>

        <Button Text="Convert"
                    Clicked="OnConvertClicked"
                    BackgroundColor="#CD5656"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    CornerRadius="10"
                    HeightRequest="50"
                    HorizontalOptions="Fill" />

        <Label x:Name="ResultLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#4CAF50"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

    </VerticalStackLayout>
    
</ContentPage>