<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.RegistrationForm"
             Title="">
    
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Registration Form" FontSize="24" HorizontalOptions="Center" TextColor="#AF3E3E"/>
        
        <Entry x:Name="NameEntry" Placeholder="Name"/>
        <Entry x:Name="EmailEnrty" Placeholder="Email" Keyboard="Email"/>
        
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True"/>

        <Button Text="Register" Clicked="OnRegisterClicked" BackgroundColor="#CD5656" TextColor="White"/>




    </StackLayout>
</ContentPage>