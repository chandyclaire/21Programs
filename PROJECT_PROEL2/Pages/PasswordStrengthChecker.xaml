<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.PasswordStrengthChecker"
             Title="PasswordStrengthChecker">

    <VerticalStackLayout Padding="20" Spacing="12">


        <Label Text="Enter a password" FontAttributes="Bold" FontSize="18" />


        <Entry
            x:Name="PasswordEntry"
            IsPassword="True"
            Placeholder="Type password..."
            TextChanged="PasswordEntry_TextChanged" />


        <ProgressBar
            x:Name="StrengthBar"
            HeightRequest="12"
            Progress="0" />


        <Label
            x:Name="StrengthLabel"
            Text="Strength: â€”"
            FontAttributes="Bold" />


        <Label
            x:Name="AdviceLabel"
            LineBreakMode="WordWrap"
            Text="Tip: Use a mix of uppercase, lowercase, numbers and symbols. Min 8 characters." />


        <Button
            Text="Show/Hide Password"
            Clicked="TogglePasswordVisibility_Clicked" />


    </VerticalStackLayout>
</ContentPage>