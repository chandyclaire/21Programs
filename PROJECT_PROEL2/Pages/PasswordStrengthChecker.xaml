<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.PasswordStrengthChecker"
             Title="">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="🔐 Password Strength Checker"
               FontSize="26"
               FontAttributes="Bold"
               TextColor="#CD5656"
               HorizontalOptions="Center" />

        <Frame CornerRadius="10"
               Padding="10"
               BorderColor="#CD5656"
               BackgroundColor="White"
               HasShadow="True"
               WidthRequest="280">
            <Entry x:Name="PasswordEntry"
                   IsPassword="True"
                   Placeholder="Type password..."
                   PlaceholderColor="Gray"
                   TextColor="Black"
                   FontSize="16"
                   TextChanged="PasswordEntry_TextChanged"
                   HorizontalTextAlignment="Start" />
        </Frame>

        <ProgressBar x:Name="StrengthBar"
                     HeightRequest="10"
                     WidthRequest="280"
                     BackgroundColor="#f0f0f0"
                     ProgressColor="#CD5656"
                     Progress="0" />


        <Label x:Name="StrengthLabel"
               FontAttributes="Bold"
               FontSize="16"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Label x:Name="AdviceLabel"
               FontSize="14"
               TextColor="Gray"
               LineBreakMode="WordWrap"
               HorizontalOptions="Center"
               WidthRequest="280"
               Text="💡 Tip: Use a mix of uppercase, lowercase, numbers, and symbols. Minimum 8 characters." />

   
        <Button Text="Show/Hide Password"
                Clicked="TogglePasswordVisibility_Clicked"
                BackgroundColor="#CD5656"
                TextColor="White"
                FontSize="16"
                CornerRadius="10"
                WidthRequest="280"
                HeightRequest="45" />

    </VerticalStackLayout>
</ContentPage>