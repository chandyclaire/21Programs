<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.Pages.PasswordStrengthChecker"
             Title="PasswordStrengthChecker">
    <VerticalStackLayout Spacing="16">
        <Label Text="Password Strength Checker" FontSize="20" FontAttributes="Bold"/>

        <Entry x:Name="PasswordEntry"
               Placeholder="Type Password..."
               IsPassword="True"
               TextChanged="PasswordEntry_TextChanged"/>

        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
            <ProgressBar x:Name="StrengthBar" HeightRequest="12" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
            <Label x:Name="ScoreLabel" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="End"/>
        </Grid>
              
    </VerticalStackLayout>
</ContentPage>