<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.Dropdown"
             Title="">
    
    <VerticalStackLayout Padding="30" Spacing="30">
        <Label Text="Dropdown Selection Form" FontSize="24" HorizontalOptions="Center" TextColor="#AF3E3E"/>
        <Label Text="ðŸŽ¨ Select Your Favorite Color"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Frame CornerRadius="12"
               Padding="10"
               BorderColor="#CD5656"
               BackgroundColor="White"
               HasShadow="True"
               WidthRequest="250"
               HorizontalOptions="Center">

            <Picker x:Name="colorPicker"
                    Title="Choose a color"
                    FontSize="16"
                    TextColor="#CD5656"
                    SelectedIndexChanged="OnPickerSelectedIndexChanged">
                <Picker.Items>
                    <x:String>Red</x:String>
                    <x:String>Green</x:String>
                    <x:String>Blue</x:String>
                    <x:String>Yellow</x:String>
                    <x:String>Purple</x:String>
                </Picker.Items>
            </Picker>
        </Frame>

        <Label x:Name="selectedColorLabel"
               Text="Your favorite color is: "
               FontSize="20"
               TextColor="#CD5656"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>