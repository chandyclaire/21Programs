<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.DatePickerForm"
             Title="DatePickerForm">


    <VerticalStackLayout Padding="24" Spacing="18" HorizontalOptions="Fill" VerticalOptions="Center">
        <Label Text="Choose a Date" FontSize="20" HorizontalOptions="Center"/>

        <DatePicker x:Name="DatePicker" Format="D" DateSelected="DatePicker_DateSelected"/>
        <Label x:Name="SelectDateLabel" FontSize="16" HorizontalOptions ="Center"/>


    </VerticalStackLayout>
</ContentPage>