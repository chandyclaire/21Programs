<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.EmailValidator"
             Title="">
    <VerticalStackLayout Padding="30" Spacing="25">

        <Label Text="ðŸ“§ Email Validator"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#CD5656"
               HorizontalOptions="Center" />

        <Frame CornerRadius="10"
               Padding="10"
               BorderColor="#CD5656"
               BackgroundColor="White"
               HasShadow="True"
               WidthRequest="280">
            <Entry x:Name="entry_Email"
                   Placeholder="Enter your email"
                   PlaceholderColor="Gray"
                   TextColor="Black"
                   FontSize="16"
                   Keyboard="Email"
                   HorizontalTextAlignment="Start" />
        </Frame>

        <Button Text="Continue"
                Clicked="ValidateEmail_Click"
                BackgroundColor="#CD5656"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                WidthRequest="280"
                HeightRequest="50"
                CornerRadius="10" />

    </VerticalStackLayout>
</ContentPage>