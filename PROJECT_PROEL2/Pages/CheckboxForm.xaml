<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.CheckboxForm"
             Title="CheckboxForm">

    <ScrollView>

        <Border Stroke="Black" StrokeThickness="2"
                StrokeShape="RoundRectangle 25, 25, 25, 25"
                Padding="10, 10, 10, 10" BackgroundColor="White">
            <VerticalStackLayout>
                <StackLayout x:Name="CheckBoxContainer">

                    <Label Text="Selected interest" TextColor="Black"></Label>

                    <Label x:Name="SelectedLabel" TextColor="Black"></Label>

                </StackLayout>
            </VerticalStackLayout>

        </Border>
        
        
    </ScrollView>
</ContentPage>