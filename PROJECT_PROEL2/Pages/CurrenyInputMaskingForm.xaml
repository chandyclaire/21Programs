<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.CurrenyInputMaskingForm"
             Title="CurrenyInputMaskingForm">

    <ScrollView>
        
    <VerticalStackLayout>

            <Border BackgroundColor="White" Stroke="Black"
                StrokeThickness="2" StrokeShape="RoundRectangle 20, 20, 20, 20">

                <VerticalStackLayout Padding="20" Spacing="20">

                    <Label Text="Select Currency:" FontSize="20" TextColor="Black"/>

                    <Picker x:Name="currencyPicker" Title="Choose a currency"
                            ItemDisplayBinding="{Binding .}" TextColor="Black"/>

                    <Label Text="Enter Amount:" FontSize="20" TextColor="Black"/>

                    <Entry x:Name="amountEntry" 
                           Placeholder="Enter number"
                           Keyboard="Numeric"
                           TextChanged="OnAmountChanged"
                           TextColor="Black"/>      

                    <Label x:Name="resultLabel"
                           FontSize="28"
                           TextColor="DarkBlue"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                </VerticalStackLayout>

            </Border>
        
    </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>