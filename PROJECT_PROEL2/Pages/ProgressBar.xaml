<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.ProgressBar">
    <VerticalStackLayout>
        <Label 
            Text="ProgressBar"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ProgressBar x:Name="progressBar"
                     ProgressColor="Red"
                     WidthRequest="300"
                     HeightRequest="20"
                     Margin="2"/> 

        <Button
            Text="Start"
            WidthRequest="250"
            Clicked="ProgressBar_Click"
            ></Button>

    </VerticalStackLayout>

</ContentPage>