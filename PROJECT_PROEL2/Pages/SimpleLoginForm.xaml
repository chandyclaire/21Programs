<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROJECT_PROEL2.SimpleLoginForm"
             Title="Login">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Username"/>
        <Entry x:Name="UsernameEntry" Placeholder="Enter Username"/>

        <Label Text="Password"/>
        <Entry x:Name="PasswordEntry" Placeholder="Enter Password"/>

        <Button Text="Login" Clicked="OnLoginClicked"/>
        <Label x:Name="ResultLabel" TextColor="Green"/>


    </VerticalStackLayout>
</ContentPage>